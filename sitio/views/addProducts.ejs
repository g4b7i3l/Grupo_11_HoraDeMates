<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head.ejs') %>

    <body class="addProducts">
        <%- include('./partials/header.ejs') %>
    
                    <form action="/admin/addProducts" method="POST" enctype="multipart/form-data">
                        <div class="formulario">
                            <div class="boxForm">
                                <label for="titulo" class="">Título :</label>
                                <input class="input-title" type="text" name="title" id="titulo" required />

                            </div>

                            <div class="boxForm">
                                <label for="descripcion" class="">Descripción:</label>
                                <input class="input-form" type="text" name="description" id="descripcion" required />

                            </div>

                            <div class="boxForm">
                                <label for="category">Categorías:</label>
                                <select name="category" id="category" value="Categorias" required>
                                    <option value="category"></option>
                                    <option value="category">Mates</option>
                                    <option value="category">Yerbas</option>
                                    <option value="category">Bolsos Materos</option>
                                    <option value="category">Bombillas</option>
                                    <option value="category">Otros</option>
                                </select>
                            </div>


                            <div class="boxForm">
                                <label for="valor" class="">Precio : </label>
                                <input class="input-price" type="text" name="price" required />

                            </div>

                            <div class="boxForm">
                                <label class="">Cargar foto :</label>
                                <input class="input-form" type="file" name="image" multiple />
                            </div>
                            <div class="boxForm">
                                <button type="submit" class="btn btn-dark">Guardar</button>
                            </div>
                        </div>
                    </form>
                    <%- include('./partials/footer.ejs') %>
                    <%- include('./partials/scripts.ejs') %>
    </body>


</html>